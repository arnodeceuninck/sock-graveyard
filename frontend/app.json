{
  "expo": {
    "name": "Sock Graveyard",
    "slug": "sock-graveyard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F4E4C1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sockgraveyard.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos of your lost socks.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select sock images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F4E4C1"
      },
      "package": "com.sockgraveyard.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Sock Graveyard to access your camera to take photos of lost socks."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Sock Graveyard to access your photos to select sock images."
        }
      ]
    ]
  }
}
